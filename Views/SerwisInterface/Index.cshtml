@model WypozyczeniaAPI.Models.MyModel<Pojazd,Pojazd>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
    
}

@if (Model.List2.Count() > 0)
{
    <h1>Aktualnie Serwisowane</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Rejestracja
                </th>
                <th>
                    Marka
                </th>
                <th>
                    Model
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.List2)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rejestracja)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marka)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-action="PojazdDetails" asp-route-id="@item.Id">Detale</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<h1>Pojazdy</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Rejestracja
            </th>
            <th>
                Marka
            </th>
            <th>
                Model
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.List1)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rejestracja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="PojazdDetails" asp-route-id="@item.Id">Detale</a> |
                    <a asp-action="Serwis" asp-route-id="@item.Id">Serwisuj</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    ViewBag.page -= 1;
    <a asp-action="index" asp-route-page="@ViewBag.page">Poprzedni</a>
    ViewBag.page += 2;
    <a asp-action="index" asp-route-page="@ViewBag.page">Następny</a>
}