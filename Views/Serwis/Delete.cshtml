@model WypozyczeniaAPI.Models.Serwis

@{
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Usuń</title>
</head>
<body>

<h3>Jesteś pewien, że chcesz usunąć poniższy Serwis?</h3>
<div>
    <h4>Serwis</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataRozpoczecia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataRozpoczecia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataZakonczenia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataZakonczenia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pojazd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pojazd.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Admin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Admin.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pracownik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pracownik.Id)
