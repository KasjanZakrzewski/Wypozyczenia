@model WypozyczeniaAPI.Models.Serwis

@{
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

@if (ViewBag.Message != null)
{
    <script>

        $(document).ready(function () {

            alert('@ViewBag.Message');

        });

    </script>

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edycja</title>
</head>
<body>

<h4>Serwis</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DataRozpoczecia" class="control-label"></label>
                <input asp-for="DataRozpoczecia" class="form-control" />
                <span asp-validation-for="DataRozpoczecia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataZakonczenia" class="control-label"></label>
                <input asp-for="DataZakonczenia" class="form-control" />
                <span asp-validation-for="DataZakonczenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PojazdId" class="control-label"></label>
                <select asp-for="PojazdId" class="form-control" asp-items="ViewBag.PojazdId"></select>
                <span asp-validation-for="PojazdId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdminId" class="control-label"></label>
                <select asp-for="AdminId" class="form-control" asp-items="ViewBag.AdminId"></select>
                <span asp-validation-for="AdminId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PracownikId" class="control-label"></label>
                <select asp-for="PracownikId" class="form-control" asp-items="ViewBag.PracownikId"></select>
                <span asp-validation-for="PracownikId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
